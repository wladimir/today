user nginx;

upstream frontend {
  server 127.0.0.1:8080;
}

upstream backend {
  server 127.0.0.1:3000;
}

server {
  listen 80 default_server;
  listen [::]:80 default_server;
  server_name localhost;
  charset utf-8;

  root /usr/share/nginx/html;
  index index.html;

  location = /api {
    return 302 /api/;
  }
  location /api/ {
    proxy_pass http://backend;
  }
}
